<!--pages/form2/form2.wxml-->
<view class="activity">
	<form bindsubmit="formSubmit">
		<view class="activity_form">
			<view class="activity_form_title">社团活动报名表</view>
			<view class="activity_form_input">
				<text>姓名：</text>
				<input name="name" value="{{name}}" placeholder="请输入姓名" placeholder-class="activity_form_input_input_placeholder"></input>
			</view>
			<view class="activity_form_input">
				<text>班级：</text>
				<input name="grade" value="{{grade}}" placeholder="请输入班级" placeholder-class="activity_form_input_input_placeholder"></input>
			</view>
			<view class="activity_form_input">
				<text>学院：</text>
				<input name="college" value="{{college}}" placeholder="请输入学院" placeholder-class="activity_form_input_input_placeholder"></input>
			</view>
			<view class="activity_form_input">
				<text>手机：</text>
				<input name="phone" value="{{phone}}" placeholder="请输入手机号" type="number"         placeholder-class="activity_form_input_input_placeholder"></input>
			</view>

			<view class="activity_form_button">
				<button class="press" form-type="submit" hover-class="plain-hover">
					<view>提交</view>
				</button>
			</view>
		</view>
	</form>
</view>