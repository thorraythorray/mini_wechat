page{
    background-color: #fff;
    font-size: 14px;
}
.swiper_box {
    width: 100%;
    height: 320px;
}
.swiper_box .slide-image{
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}
.shopping_container{
    padding: 0 30rpx;
}
.shopping_container .title{
    margin: 20rpx 0;
    font-weight: bold;
    color: #333;
}

.shopping_container .reason{
    margin: 20rpx 0;
    color: #939393;
    line-height: 22px;
}

.shopping_container .add_buy{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.add{
    width: 45rpx;
    height: 45rpx;
    border: 1px solid;
    color: #ccc;
      transition: color .25s;
    position: relative;
    border-radius: 50%;
    background-color: red;
  }
   .add::before{
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    width: 26rpx;
    transform:translate(-50%, -50%);
    border-top: 10rpx solid #fff;
  }
   .add::after{
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    height: 26rpx;
    transform: translate(-50%,-50%);
    border-left: 10rpx solid #fff;
  }