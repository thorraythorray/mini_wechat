.view_container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 50rpx;
  
}

/* 按钮未选中 */
.normal_button {
  background: white；
}

/* 按钮选中 */
.checked_button {
  background: #4583f7;
  color: white
}


.view_base{
  background-color: #ffede6;
  /* 字体颜色 */
  color:#c58268;
  display: flex;
  margin: 20rpx 10rpx 0rpx 10rpx;
  border-radius: 15rpx;
  padding: 10rpx;
  align-items: center;
  justify-content: center;
}


/* view选中 */
.checked_view {
  /* 边框 */
  border: 3rpx solid #237bff;
}


/* 初始样式 */
radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
}

/* 改变勾的颜色 */
radio .wx-radio-input.wx-radio-input-checked::before {
  color: #fff;
}