<!--pages/login/login.wxml-->
<view class="logo">
    <image class="img-logo" src="/images/logo.png"></image>
</view>
<view class='contain'>
    <form bindsubmit="formSubmit">
        <view class="form">
            <view class='view_container'>
                <radio-group name="auth" bindchange="changeIdentify" style="width: 72%;">
                    <radio  class="radio-item" value="user" checked="checked" color="#DBB975">
                        学生
                    </radio>
                    <radio  class="radio-item" value="admin" checked="" color="#DBB975" style="margin-left: 45%;">
                        维修端
                    </radio>
                </radio-group>
            </view>
            <view class="input-section">
                <view class="imgs">
                    <view class="img1">
                        <image src="/images/phone.png" class="img-name"></image>
                    </view>
                    <view class="img2">
                        <image src="/images/passwd.png" class="img-pwd"></image>
                    </view>
                </view>
                <view class="inputs">
                    <input type="text" class="username" name="username" placeholder="账号"
                        placeholder-style="color: #D3D3D3;"/>
                    <input password="true" class="pwd" name="password" placeholder="密码"
                        placeholder-style="color: #D3D3D3;"/>
                </view>
            </view>
        </view>
        <button form-type="submit" class="btn_login">登录</button>
    </form>
</view>