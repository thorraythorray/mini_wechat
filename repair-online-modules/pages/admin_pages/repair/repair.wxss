/* pages/user_pages/baoxiujilu/baoxiujilu.wxss */
page {
  background-color: ghostwhite;
}

.content {
  background-color: white;
}

.list {
  padding: 10rpx 20rpx 10rpx 20rpx;
}

.hr {
  height: 5rpx;
  background-color: #cccccc;
  opacity: 0.2;
  margin-top: 15rpx;
}

.image-section {
  width: 40%;
}

image {
  height: 220rpx;
  width: 240rpx;
}
.desc {
  padding: 10rpx 20rpx 0rpx 20rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
}

.detail {
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  font-size: small;
  width: 60%;
}

.sta-rep {
  display: flex;
  flex-direction: row;
}

.remark {
  color: #999999;
}

.site {
  color: #999999;
}

.repair-time {
  position: absolute;
  right: 120rpx;
  color: #999999;
}

.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 80rpx;}  
.swiper-tab-list{  font-size: 30rpx;  
  display: inline-block;  
  width: 33.33%;  
  color: #777777;  
}  
.on{ color: #da7c0c;  
  border-bottom: 5rpx solid #da7c0c;}  

.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
  text-align: center;  
}