/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgba(170, 170, 170, 0.849);
}

.usermotto {
  margin-top: 200px;
}

.slides {
  height: 280rpx;
}

.swiper-view {
  width: 100%;
  height: 154px;
}

swiper-item image {
  width: 100%;
}

.cate {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  margin-top: -9px;
}

.cate-item {
  width: 32.7%;
  height: 154px;
  border: 1px solid #eee;
  align-items: center;
  display: flex;
}

.item-group {
  display: grid;
  justify-items: center;
}

.item-group image{
  width: 40%;
  height: 45px;
  padding: 10px;
}

.item-group text{
  font-size: small;
}

.guide_info{
  margin-top:13px;
  display: flex;
  justify-content: center;
}

.guide_info navigator{
  width: 100%;
  height: 120px;
}

.guide_info image{
  width: 100%;
  height: 120px;
}

.repair_section {
  margin-top:20px;
  display: flex;
  flex-direction:column;
}

