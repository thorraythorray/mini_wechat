/* pages/user/user_main.wxss */
page {
    background-color: ghostwhite;
  }
  
  .content {
    margin: 20rpx;
    background-color: white;
    font-size: 27rpx;
  }
  
  .hr {
    height: 5rpx;
    background-color: #cccccc;
    opacity: 0.2;
  }
  
  .head {
    line-height: 80rpx;
    text-align: center;
    font-size: large;
  }
  
  .desc {
    padding: 30rpx;
    height: 160rpx;
    font-size: 27rpx;
  }
  
  .remark {
    padding: 30rpx;
    height: 150rpx;
    font-size: 27rpx;
  }
  
  .siteInput {
    padding-left: 30rpx;
    height: 100rpx;
    font-size: 27rpx;
  }
  
  button {
    color: white;
    background-color: cornflowerblue;
    margin-top: 60rpx;
    z-index: 10000;
  }
  
  image {
    height: 70rpx;
    width: 70rpx;
  }
  
  .files {
    line-height: 100rpx;
    display: flex;
    flex-direction: row;
  }
  
  .file-name {
    width: 70%;
    margin-left: 50rpx;
    color: #D3D3D3;
  }
  
  .img-name {
    position: absolute;
    right: 50rpx;
    margin-top: 10rpx;
  }

   
/*添加图片*/
 
.addImv .chooseView {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx 20rpx;
  background-color: #f2f6f9;
  border: 1px dashed lightgray;
  text-align: center;
  line-height: 180rpx;
  /* padding: 0rpx 7rpx; */
  border-radius: 5px;
  margin-left: 40rpx;
}
 
.addImv .chooseImv {
  width: 50rpx;
  height: 50rpx;
}
 
/*已选择的图片*/
 
.addImv .upFile {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  padding: 0rpx 7rpx;
  margin-left: 40rpx;
  border: 1px solid #c0ccda;
}
 
.addImv .upFile .itemImv {
  width: 180rpx;
  height: 180rpx;
  padding: -1rpx 7rpx;
}
 
.addImv .upFile .closeImv {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 50rpx;
  height: 50rpx;
}

.repair-type {
    padding: 30rpx;
}

.radio-item {
  width: 50%;
}