<import src="../tabbar/tabbar.wxml"/>
<template is="tabBar" data="{{tabBar:tabBar}}"></template>

<view class="content">
  <block wx:for="{{result}}" wx:key="id">
    <view class="list">
      <view class="list-item">
        <view bindtap="previewImg">
          <image mode="aspectFit" src="{{item.image}}">
          </image>
        </view>
        <view class="detail">
          <view class="desc">{{item.desc}}</view>
          <view wx:if="{{item.state == 'ordinary'}}" style="color:red;" class="remark">{{item.state}}</view>
          <view wx:else class="remark" style="color:yellow;">{{item.state}}</view>
          <view class="site">{{item.location}}</view>
          <view class="site">{{item.username}}</view>
          <view class="site">{{item.userphone}}</view>
          <view class="sta-rep">
            <view wx:if="{{item.status == 0}}" style="color:red;">{{item.status}}</view>
            <view wx:elif="{{item.status == 1}}" style="color:yellow;">{{item.status}}</view>
            <view wx:else style="color:green;">{{item.status}}</view>
            <view class="repair-time">{{item.end_date}}</view>
            <!-- <view class="repair-time">{{dateUtil.formatTime(item.repair_date)}}</view> -->
          </view>
        </view>
      </view>
    </view>
    <view class="hr"></view>
  </block>
</view>