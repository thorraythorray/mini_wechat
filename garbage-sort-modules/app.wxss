.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

page {
  background: #dedede;
}

.tips {
  width: 90%;
  margin: 30rpx auto 10rpx;
}

.tips_txt {
  font-size: 25rpx;
  margin-left: 10rpx;
  color: red;
}

.footer {
  width: 90%;
  margin: 30rpx auto 50rpx;
  font-size: 25rpx;
  text-align: center;
  color: #918e8ee3;
  display: flex;
  flex-direction: column;
}

.dev_own {
  color: green;
}
.share_btn {
  position: fixed;
  right: 20rpx;
  bottom: 150rpx;
  /* width: 100rpx;
  height: 100rpx; */
  background: rgba(255, 255, 255, 0.5);
  border-radius: 30rpx;
  text-align: center;
  font-size: 25rpx;
  color: #000;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  letter-spacing: 2rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 25rpx;
  box-shadow: 1px 1px 3px #7c7272,
                1px -1px 3px #dedede,
                -1px 1px 3px #dedede,
                -1px -1px 3px #dedede;
  -moz-box-shadow: 1px 1px 3px #7c7272,
                     1px -1px 3px #dedede,
                     -1px 1px 3px #dedede,
                     -1px -1px 3px #dedede;
  -webkit-box-shadow: 1px 1px 3px #7c7272,
                        1px -1px 3px #dedede,
                        -1px 1px 3px #dedede,
                        -1px -1px 3px #dedede;
}

.share_btn image {
  width: 30rpx;
  height: 30rpx !important;
  margin-right: 10rpx;
}

.share_btyn {
  position: fixed;
  right: 20rpx;
  bottom: 150rpx;
  width: 150rpx;
  height: 50rpx;
  background: transparent;
  border-radius: 30rpx;
}

.share_btyn::after {
  border: none;
}