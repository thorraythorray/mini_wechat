/**index.wxss**/

.top {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  width: 750rpx;
  align-items: center;
  justify-content: space-between;
  color: #62c4d9;
}

.weather {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 400rpx;
  justify-content: space-between;
  font-size: 28rpx;
}

.weather-img {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
}

.other {
  color: #62c4d9;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time {
  font-size: 160rpx;
  font-weight: 600;
}

.set-time {
  line-height: 80rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;
  width: 690rpx;
  margin: 30rpx;
  flex-wrap: wrap;
}

.radio {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 210rpx;
  margin: 10rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
  font-size: 26rpx;
}

.radio-top {
  display: flex;
  flex-direction: row;
}

.radio-img {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
}

radio {
  transform: scale(0.4);
}

.start {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 10rpx solid #62c4d9;
  border-radius: 50%;
}

.start-text {
  margin: 30rpx 10rpx 20rpx 10rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.start-img {
  width: 70rpx;
  height: 70rpx;
}

.end {
  margin: 40rpx;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 10rpx solid #62c4d9;
  border-radius: 50%;
}

.end-text {
  font-size: 40rpx;
  font-weight: 600;
}

.page-section-spacing{
  overflow: hidden;
  padding: 15px;
}
.scroll-view_H{
  display: flex;
  white-space: nowrap;
  flex-wrap:wrap;
  justify-content:space-between;
}

.scroll-view_H::after{
  content:"";
  width: 31%;
}

.scroll-view-item_H{
  width: 31%;
  margin-top:10px;
}

.audio_img{
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
}

.audio_img_select {
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
  border: 1px solid #2d88e6;
}

.song_desc{
  font-size: 22rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
}

.label_icon{
  border: 0px solid #2d88e6;
  border-radius: 8rpx;
  width: 12rpx;
  height: 37rpx;
  background: #2d88e6;
  margin-left: 37rpx;
  margin-right:10rpx
}

.page-section-title{
  display: flex;
  height: 25px;
  width: 100%;
  align-items: center;
  margin-top: 10px;
  margin-bottom: -10px;
}

.page-section{
  background: #130f25;
  width: 95%;
  border-radius: 26rpx;
  margin-bottom: 15px;
}

.mod{
  border-radius: 20rpx;
  color:#fff;
  font-size: 24rpx;
}

.mod-scroll {
  width: 30%;
  margin-top: 15px;
  background: #0c1041;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.audio_set {
  display: flex;
  width:100%;
  height:25px;
  align-items: center;
  margin-bottom:10px;
}

.section_title {
  font-size: 14px;
  color: #fff;
  margin-left: 15px;
  width:50%;
}

.time_picker {
  width:50%;
  font-size:14px;
  text-align: right;
  margin-right: 10px
}

.choose_mood {
  width: 30%;
  margin-top: 15px;
  background: #2d88e6;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sleep_feedback {
  display: flex;
  width: 100%;
  height: 200rpx;
  align-items: center;
  justify-content: center;
  margin-top: 15px;
}

.feedback_item {
  width: 24%;
  display: grid;
  justify-items: center;
}

.feedback_item image{
  width: 80rpx;
  height: 80rpx;
}

.feedback_item text{
  font-size: 21rpx;
  margin-top: 25rpx;
}