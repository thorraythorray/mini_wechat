/* pages/user/user.wxss */
@import "/pages/setTime/setTime.wxss";

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx;
  padding-bottom: 50rpx;
  color: #fff;
}

.user-info image {
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx;
  border-radius: 50%;
  color: #fff;
}

.user-info view {
  color: #62c4d9;
  font-size: 30rpx;
  margin: 20rpx;
  color: #fff;
}

.title {
  width: 560rpx;
  display: flex;
  align-items: flex-start;
  color: #fff;
}