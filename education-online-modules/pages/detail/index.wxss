.content {
  width: 90%;
  margin: 20rpx auto 10rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 15rpx;
}

.title {
  text-align: center;
  font-weight: bold;
  margin: 10rpx 0 25rpx;
  font-size: 40rpx;
}

.titles {
  text-align: center;
  font-weight: bold;
  margin: 30rpx 0 30rpx;
  font-size: 33rpx;
}

.c_image {
  width: 30%;
  margin: 30rpx auto;
  display: flex;
}

.desc {
  font-size: 30rpx;
  display: flex;
  margin-bottom: 50rpx;
  line-height: 26px;
  text-indent: 2em;
}

.sm_title {
  font-size: 35rpx;
  display: flex;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.sm_remark {
  font-size: 35rpx;
  display: flex;
  margin: 20rpx 0;
}

.auther {
  text-align: right;
  margin-bottom: 7px;
  font-size: small;
}