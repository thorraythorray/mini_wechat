<!--index.wxml-->
<view class="container">
    <!--写笔记-->
    <view class='col'>
        <view class='item add_box'  bindtap="onNewItem">
            <image class="add_bg" src="../../image/add.png" style="width:120rpx;height:120rpx;"></image>
        </view>
        <!--没有笔记时的提示-->
        <block wx:if="{{items.length < 1}}">
            <view class='tips'>
                <view class='tips_box'>
                    <image class='tips_icon' src="../../image/tips_icon.png"style="width:70rpx;height:70rpx;"></image>
                </view>
                <view class='tips_txt'>点此添加新记事本</view>
            </view>
        </block>
    </view>

    <!--笔记列表-->
    <block wx:for="{{items}}" wx:key="{{key}}">
        <view class="col" wx:if="{{ item.state != 3 }}">
            <view class='item notepad {{item.class}}' data-key="{{item.id}}" bindtap="onEditItem">
                <view class='content'>
                    <view class='txt'>{{item.title}}</view>
                </view>
                <view class='bottom'>
                    <view class='txt'>
                        {{item.date}}
                    </view>
                </view>
            </view>
        </view>
    </block>
</view>
